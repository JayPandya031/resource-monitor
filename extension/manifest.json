{
    "manifest_version": 3,
    "name": "Resource Monitor",
    "version": "1.0",
    "description": "This app shows the CPU and RAM usage of the system",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "alarms",
        "system.cpu",
        "system.memory"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}